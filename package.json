{
  "name": "notesmaker",
  "version": "1.0.0",
  "description": "Offline AI-Powered Notes App",
  "main": "Frontend/electron/main.cjs",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd Backend && npm start",
    "start:frontend": "cd Frontend && npm run dev",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run start:backend\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd Frontend && npm run build",
    "build:backend": "cd Backend && npm install --production",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux AppImage"
  },
  "build": {
    "appId": "com.notesmaker.app",
    "productName": "NotesMaker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "Frontend/electron/**/*",
      "Frontend/dist/**/*",
      "build/icon.png",
      "Frontend/electron/**/*.cjs"
    ],
    "asarUnpack": [
      "Backend/**/*"
    ],
    "extraResources": [
      {
        "from": "Backend",
        "to": "Backend",
        "filter": ["**/*", "!node_modules/**/*"]
      }
    ],
    "afterPack": "./afterPack.js",
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Office",
      "icon": "build/icon.png",
      "executableName": "notesmaker"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  }
}
